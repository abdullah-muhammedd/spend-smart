<%- include('../Partials/head.ejs') %>
<link rel="stylesheet" href="./css/user-pages.css">
</head>

<body>
    <%- include('../Partials/header.ejs') %>
    <%- include("../Partials/feedback.ejs") %>
    <div class="data-form">
        <form action="/reset-password" method="POST">
            <h3>Reset Password</h3>
            <input type="hidden" name="_csrf" value="">
            <div class="form-floating m-0">
                <input type="password" class="form-control" id="password" name="userPassword" required>
                <label for="password">Password</label>
            </div>
            <input type="hidden" value="<%= token %>" name="token">
            <button class="btn btn-light spend-smart-btn-dark mb-0" type="submit">Update Password</button>
        </form>
    </div>
    <%- include('../Partials/end.ejs') %>