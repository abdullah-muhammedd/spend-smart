<%- include("../Partials/head.ejs") %>
<link rel="stylesheet" href="./css/add-pages.css">
</head>

<body>
    <%- include("../Partials/header.ejs") %>
    <%- include("../Partials/feedback.ejs") %>
    <div class="data-container container-fluid mt-5">
        <form action="/edit-budgets" method="POST">
            <h3 class="m-2">Edit Budget</h3>
            <input type="hidden" name="_csrf" value="">
            <input type="hidden" name="budgetId" value="<%= budget.id %>">
            <div class="form-floating mb-0">
                <input type="text" class="form-control" id="name" name="budgetName" value="<%= budget.name %>" required>
                <label for="name">Budget Name</label>
            </div>
            <div class="form-floating mb-0">
                <input type="number" step="0.01" class="form-control" id="amount" name="budgetAmount"
                    value="<%= budget.amount %>" required>
                <label for="amount">Amount</label>
            </div>
            <div class="form-floating mb-0">
                <input type="number" step="0.01" class="form-control" id="goal" name="budgetGoal"
                    value="<%= budget.goal %>" required>
                <label for="goal">Goal</label>
            </div>
            <textarea id="description" placeholder="Description" name="budgetDescription">
                <%= budget.description %>
            </textarea>
            <button class="btn btn-light spend-smart-btn-dark mb-0" type="submit">Update</button>
        </form>
    </div>
    <%- include("../Partials/end.ejs") %>